<?xml version="1.0" encoding="utf-8" ?>
<Window
    x:Class="TitlebarTest.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:TitlebarTest"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="TitlebarTest"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!--  Title Bar  -->
            <RowDefinition Height="*" />
            <!--  App Content  -->
        </Grid.RowDefinitions>
        <TitleBar
            x:Name="titleBar"
            Title="TitleBar"
            BackRequested="titleBar_BackRequested"
            IsBackButtonVisible="False" />
        <StackPanel
            Grid.Row="1"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center"
            Orientation="Vertical">
            <TextBlock HorizontalAlignment="Center">
                <Run Text="1. Launch the app (IsBackButtonVisible is set to False in XAML)" /><LineBreak />
                <Run Text="2. Set IsBackButtonVisible to true with the toggle" /> <LineBreak />
                <Run Text="3. Click the Back button; it drags the window" /> <LineBreak />
                <Run Text="4. Click it again; the BackRequested event gets triggered but animation/pressed state is not shown" /> <LineBreak />
                <Run Text="5. Maximize the window or toggle on/off again fix it" />
            </TextBlock>
            <ToggleSwitch
                x:Name="toggleSwitch"
                Margin="0,64,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Header="IsBackButtonVisible"
                Toggled="ToggleSwitch_Toggled" />
        </StackPanel>

        <TextBlock
            x:Name="ClickEventTxtBlock"
            Grid.Row="1"
            Margin="0,64,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Foreground="Red" />
    </Grid>
</Window>
